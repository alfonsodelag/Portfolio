<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/experiences/edit/{{experience.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{experience.title}}" class="form-control" name="title" placeholder="Title"> 
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{experience.year}}" name="Year" class="form-control" placeholder="Year">
                        </div>
                        <div class="form-group">
                            <textarea type="text" value="{{experience.description}}" name="Description" class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>