<div class="container p-4">
    <div class="row">

        {{#each skills}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="m-2">{{title}}</p>
                        <p>{{level}}%</p>
                        <a href="/skills/delete/{{id}}" class="btn btn-danger">Delete Skill </Link></a>
                        <a href="/skills/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no skills saved yet.</p>
                    <a href="/skills/add">Create One!</a>
                </div>
            </div>
        {{/each}}
            <a class="text-center col-12" href="/skills/add">Add another skill!</a>
    </div>
</div>